{
	"version": "0.2.0",
	"configurations": [{
			"name": "test action in watch mode",
			"type": "node",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			},
			"program": "${workspaceRoot}/dist/index.mjs",
			"envFile": "${workspaceRoot}/.env",
			"outputCapture": "console",
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "container:bootstrap",
			"type": "docker",
			"request": "launch",
			"containerName": "aws-cdk-dependencies-action",
			"preLaunchTask": "container:bootstrap",
			"platform": "node",
		},
		{
			"name": "container:debug",
			"type": "docker",
			"request": "launch",
			"containerName": "aws-cdk-dependencies-action",
			"preLaunchTask": "container:debug",
			"platform": "node",
			"removeContainerAfterDebug": true
		},
		{
			"name": "container:reboot",
			"type": "docker",
			"request": "launch",
			"containerName": "aws-cdk-dependencies-action",
			"preLaunchTask": "container:reboot",
			"platform": "node"
		}
	]
}
